group = smsc
smsc = smpp
system-type = 'VMA'
smsc-id = csoft_s3
allowed-smsc-id = csoft_s3
host = s4.itsarrived.net
port = 2775
smsc-username = MUnityD.253156
smsc-password = 06302199
