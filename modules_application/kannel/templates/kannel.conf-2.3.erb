# ------------------------------------------
# SMS BOX config
# ------------------------------------------

group = smsbox
smsbox-id = smsbox_test
bearerbox-host = 127.0.0.1
bearerbox-port = 3001
sendsms-port = 3003
log-file = "/var/log/nokia/kannel/smsbox_test.log"
log-level = 0
access-log = "/var/log/nokia/kannel/smsbox_test.log"
sendsms-chars = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ$ +-"
http-request-retry = 0
http-queue-delay = 0
max-pending-requests = 512


# ------------------------------------------
# SendSMS User Groups
# ------------------------------------------

group = sendsms-user
username = do_not_use
password = do_not_use
forced-smsc = smsc_test

# ------------------------------------------
# SMS services (MO handlers, only this
# default for the sendsms smsbox)
# ------------------------------------------

group = sms-service
keyword = default
omit-empty = true
post-url = "http://127.0.0.1:43008/bb_conf"


# ------------------------------------------
# MO routing to Smsbox
# ------------------------------------------

group = smsbox-route
smsbox-id = smsbox_ns
shortcode = "<%= v_port_kannel_ns %>"

group = smsbox-route
smsbox-id = smsbox_imps
shortcode = "<%= v_port_kannel_imps %>"

group = smsbox-route
smsbox-id = smsbox_subms
shortcode = "<%= v_port_kannel_subms %>"

group = smsbox-route
smsbox-id = smsbox_mu
shortcode = "<%= v_port_kannel_mu %>"

group = smsbox-route
smsbox-id = smsbox_em2sms
shortcode = "<%= v_port_kannel_em2sms %>"
