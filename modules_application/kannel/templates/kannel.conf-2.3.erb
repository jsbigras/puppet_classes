# ------------------------------------------------
# CORE (bearerbox) settings
# ------------------------------------------------

group = core
admin-port = 3002
admin-password = ozimps
status-password = ozimps
smsbox-port = 3001
admin-allow-ip = "*.*.*.*"
log-file = "/var/log/nokia/kannel/bb.log"
log-level = 0
access-log = "/var/log/nokia/kannel/bb.log"
box-deny-ip = "*.*.*.*"
box-allow-ip = "127.0.0.1"
udp-deny-ip = "*.*.*.*"
sms-incoming-queue-limit = -1
sms-outgoing-queue-limit = -1
smsbox-max-pending = 999
sms-resend-freq = 60
sms-resend-retry = 10
sms-combine-concatenated-mo = true


# ------------------------------------------------
# SMSC connections
# ------------------------------------------------

