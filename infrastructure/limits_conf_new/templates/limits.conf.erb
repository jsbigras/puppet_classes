# /etc/security/limits.conf
#
#Each line describes a limit for a user in the form:
#
#<domain>        <type>  <item>  <value>
#
#Where:
#<domain> can be:
#        - an user name
#        - a group name, with @group syntax
#        - the wildcard *, for default entry
#        - the wildcard %, can be also used with %group syntax,
#                 for maxlogin limit
#
#<type> can have the two values:
#        - "soft" for enforcing the soft limits
#        - "hard" for enforcing hard limits
#
#<item> can be one of the following:
#        - core - limits the core file size (KB)
#        - data - max data size (KB)
#        - fsize - maximum filesize (KB)
#        - memlock - max locked-in-memory address space (KB)
#        - nofile - max number of open files
#        - rss - max resident set size (KB)
#        - stack - max stack size (KB)
#        - cpu - max CPU time (MIN)
#        - nproc - max number of processes
#        - as - address space limit
#        - maxlogins - max number of logins for this user
#        - maxsyslogins - max number of logins on the system
#        - priority - the priority to run user process with
#        - locks - max number of file locks the user can hold
#        - sigpending - max number of pending signals
#        - msgqueue - max memory used by POSIX message queues (bytes)
#        - nice - max nice priority allowed to raise to
#        - rtprio - max realtime priority
#
#<domain>      <type>  <item>         <value>
#

#*               soft    core            0
#*               hard    rss             10000
#@student        hard    nproc           20
#@faculty        soft    nproc           20
#@faculty        hard    nproc           50
#ftp             hard    nproc           0
#@student        -       maxlogins       4

* soft core 1000000
* hard core 1000000
<% if (classes.include? 'mysql::server')&&(!((classes.include? 'role_subms_new')||(classes.include? 'role_mu_new'))) %>
# Add mysql server parameters
root       soft     memlock     unlimited
root       hard     memlock     unlimited

mysql   soft    memlock <%= memlock %>
mysql   hard    memlock <%= memlock %>
<% end -%>
<% if classes.include? 'role_cdw_new' %>
# Add cdw server parameters
ozimps soft nofile <%= nofile %>
ozimps hard nofile <%= nofile %>

ozimps soft nproc <%= nproc %>
ozimps hard nproc <%= nproc %>

* soft    nproc   100
* hard    nproc   150
<% end -%>
<% if classes.include? 'role_romeo_new' %>
# Add romeo server parameters
* soft nofile 100000
* hard nofile 100000

romeo soft nofile 650000
romeo hard nofile 650000

romeo soft nproc 25000
romeo hard nproc 25000
<% end -%>
<% if (classes.include? 'role_imps_app_new')||(classes.include? 'role_imps_fe_new') %>
# Add imps server parameters
root   soft    nofile  524288
root   hard    nofile  524288

root   soft    nproc   524288
root   hard    nproc   524288

root   soft    core    unlimited
root   hard    core    unlimited
<% end -%>
<% if my_role == 'puppet' %>
# Add Puppet master parameters
activemq soft nproc 10000
activemq hard nproc 10000
<% end -%>
<% if !(classes.include? 'mysql::server')||(classes.include? 'role_subms_new')||(classes.include? 'role_mu_new') %>
# Add regular server parameters
ozimps soft nofile <%= nofile %>
ozimps hard nofile <%= nofile %>

ozimps soft nproc <%= nproc %>
ozimps hard nproc <%= nproc %>

* soft    nproc   100
* hard    nproc   150
<% end %>
