<?xml version="1.0"?>
<configuration>
    <mobile-http>
        <listening-interface><%= ipaddress %></listening-interface>
        <listening-port><%= l_port_cstore_mo %></listening-port>
    </mobile-http>

    <admin-http>
        <listening-interface><%= ipaddress %></listening-interface>
        <listening-port><%= v_port_cstore_admin %></listening-port>
    </admin-http>
    
    <aaaClient>
        <aaaUrl>http://<%= int_vip_cluster %>:<%= v_port_aaa_admin %></aaaUrl>
    </aaaClient>

    <appleClient>
        <validate-receipt-url>%ITUNE_SERVER_URL%</validate-receipt-url>
    </appleClient>

    <androidService>
        <android-mtx-validation-keys>
            <key package="%PACKAGE_NAME%">%VALIDATION_KEY%</key>
        </android-mtx-validation-keys>
    </androidService>

    <file-content-client>
        <local>
            <fsBasePath>/var/nokia/contentstore</fsBasePath>
        </local>
    </file-content-client>

    <content-store>
        <external-base-url>http://demo-cstore-c-01.unity.mobi</external-base-url>
        <filtering-new-for-day-count>7</filtering-new-for-day-count>
        <default-page-size>200</default-page-size>

        <!-- AAA purchase validator is used by default.-->
        <purchase-validator-overrides>
            <validator networkcode="%NETWORK_CODE%">%VALIDATOR_CLASS%</validator>
        </purchase-validator-overrides>
    </content-store>

    <admin-content-store>
        <external-base-url>http://<%= ipaddress %>:<%= v_port_cstore_admin %></external-base-url>
    </admin-content-store>
    
    <sso>
        <clientToGatewayInfo>
            <consumerInfo>
                <!-- key / secret for all other clients -->
                <key>ZXdxVEJVKSUjJEBVJVQ=</key>
                <secret>A/82ARN+Z3RZVU4jUCUxI1hfQ0orXiQrJlVKJE5eWUtDQ3Rnanlo</secret>
                <signAllQueryParams>true</signAllQueryParams>
                <signExtOauthParams>true</signExtOauthParams>
            </consumerInfo>
        </clientToGatewayInfo>
    </sso>
</configuration>
